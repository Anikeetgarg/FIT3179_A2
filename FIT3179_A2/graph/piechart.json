{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "description": "Pie chart showing the proportion of visitors by purpose of visit to Australia.",
    "width": 400,
    "height": 400,
    "data": {
      "values": [
        {"Purpose": "Leisure/Holiday", "Visitors": 5000000},
        {"Purpose": "Business", "Visitors": 1200000},
        {"Purpose": "Visiting Friends/Relatives", "Visitors": 2800000},
        {"Purpose": "Education", "Visitors": 600000},
        {"Purpose": "Other", "Visitors": 400000}
      ]
    },
    "layer": [
      {
        "mark": {"type": "arc", "outerRadius": 150},
        "encoding": {
          "theta": {"field": "Visitors", "type": "quantitative"},
          "color": {"field": "Purpose", "type": "nominal"},
          "tooltip": [
            {"field": "Purpose", "type": "nominal"},
            {"field": "Visitors", "type": "quantitative", "format": ","}
          ]
        }
      },
      {
        "mark": {"type": "text", "radius": 100, "fontSize": 12, "fill": "white"},
        "encoding": {
          "theta": {"field": "Visitors", "type": "quantitative", "stack": true},
          "text": {"field": "Purpose", "type": "nominal"}
        }
      }
    ],
    "view": {"stroke": null}
  }
  